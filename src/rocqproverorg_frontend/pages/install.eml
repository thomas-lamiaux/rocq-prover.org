<script>
function detect_os() {
  const agent = navigator.userAgent;
  if (agent.includes('Win')) {
    return "windows";
  }
  if (agent.includes('Mac')) {
    return "mac";
  }
  return "linux";
}


function makeHash(newX, newY) {
  window.location.hash = `${newX}-${newY}`;
}

function anchor_os_loc() {
  if (window.location.hash) {
    return;
  }
  makeHash (detect_os(), "vscode");
}

// Fonction pour analyser et modifier le hash
function splitHash () {
  let hash = window.location.hash.substring(1); // Enlever le '#' au d√©but
  const words = hash.split("-");
  return words
}

function updateHash(s, nv) {
  let words = splitHash ();
  if (words) {
    let x = words[0];
    let y = words[1];

    if (s === "os") {
      makeHash(nv, y);
    } else {
      makeHash(x, nv);
    }
  } else {
    console.error("The hash is not of the form x-y");
  }
}

function persist_os_link() {
  let words = splitHash ();
  if (words) {
    return words[0];
  }
  else {
    return detect_os ();
  }
}

function persist_editor_link() {
  let words = splitHash ();
  if (words) {
    return words[1];
  }
  else {
    return "vscode";
  }
}


anchor_os_loc();

</script>
